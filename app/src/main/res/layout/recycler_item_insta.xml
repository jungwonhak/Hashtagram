<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:background="#ffffff"
             android:layout_marginBottom="8dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <!--<com.orcpark.hashtagram.ui.widget.GradientNetworkImageView-->
    <com.orcpark.hashtagram.ui.widget.GradientSquareImageView
            android:id="@+id/iv_thumb"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:padding="8dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_summary"
                android:layout_marginBottom="8dp"
                android:textSize="15sp"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="#ffffff"
                android:shadowDy="1.5"
                android:shadowDx="1.5"
                android:shadowRadius="1.0"
                android:shadowColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!--<ImageView-->
            <!--<com.orcpark.hashtagram.ui.widget.CircleImageView-->
            <ImageView
                    android:id="@+id/iv_author"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/iv_author"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_author"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#ffffff"
                        android:shadowDy="1.5"
                        android:shadowDx="1.5"
                        android:shadowRadius="1.0"
                        android:shadowColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_create_time"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:shadowDy="1.5"
                        android:shadowDx="1.5"
                        android:shadowRadius="1.0"
                        android:shadowColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/btn_like"
                    android:background="@drawable/selector_favorite_36"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:id="@+id/tv_likes_count"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:shadowDy="1.5"
                    android:shadowDx="1.5"
                    android:shadowRadius="1.0"
                    android:shadowColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_comment_count"
                android:layout_gravity="bottom"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#ffbb33"
                android:shadowDy="1.5"
                android:shadowDx="1.5"
                android:shadowRadius="1.0"
                android:shadowColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginLeft="2dp"
                android:text="Comments"
                android:layout_gravity="bottom"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:shadowDy="1.5"
                android:shadowDx="1.5"
                android:shadowRadius="1.0"
                android:shadowColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>